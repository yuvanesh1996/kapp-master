<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    tools:context="com.scene.tags.sphere.MainActivity" >
<ImageButton
    android:id="@+id/close"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:scaleType="centerInside"
    android:src="@drawable/close_ico"
    android:background="@android:color/transparent"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:alpha="0.75"/>

    <in.org.kurukshetra.app.CloudView android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_centerInParent="true"
        android:id="@+id/cloudview"
        />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:orientation="horizontal"
    android:paddingBottom="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/facebook55"
        android:scaleType="centerInside"
        android:layout_gravity="start"
        android:background="@android:color/transparent"
        android:id="@+id/fb_icon"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/twitter_icon"
        android:layout_toStartOf="@+id/twitter_icon"
        android:layout_marginRight="50dp"
        android:layout_marginEnd="50dp"
        android:alpha="0.75"
        />
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/twitter1"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/twitter_icon"
        android:alpha="0.75"/>
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/youtube17"
        android:scaleType="centerInside"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:id="@+id/youtube_icon"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/twitter_icon"
        android:layout_toEndOf="@+id/twitter_icon"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:alpha="0.75"/>
    </RelativeLayout>

</LinearLayout>
</RelativeLayout>
