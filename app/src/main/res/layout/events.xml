<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="97dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        android:nestedScrollingEnabled="true"

        android:id="@+id/view">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/im"
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sangeetha"
            android:layout_gravity="center_vertical|left"
            app:riv_corner_radius_bottom_left="40dp"
            app:riv_corner_radius_bottom_right="40dp"
            app:riv_corner_radius_top_left="40dp"
            app:riv_corner_radius_top_right="40dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/list_item"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:text="Sangeetha"
                android:gravity="center_vertical|center"
                android:width="50dp"
                android:textSize="15sp"
                android:textColor="#c30b1f2b"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"/>
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/sangeetha"
            android:contentDescription="+918903131245"
            android:onClick="call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            android:layout_gravity="center_vertical|right"
            app:elevation="4dp"
            card_view:backgroundTint="@color/colorPrimary" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        android:nestedScrollingEnabled="true"
        >

        <com.makeramen.roundedimageview.RoundedImageView

            android:layout_height="80dp"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/adarsh"
            android:layout_gravity="center_vertical|left"
            app:riv_corner_radius_bottom_left="40dp"
            app:riv_corner_radius_bottom_right="40dp"
            app:riv_corner_radius_top_left="40dp"
            app:riv_corner_radius_top_right="40dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:text="Adharsh Gukan"
                android:gravity="center_vertical|center"
                android:width="50dp"
                android:textSize="15sp"
                android:textColor="#c30b1f2b"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                />
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/adarsh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            android:contentDescription="+919487539200"
            android:onClick="call"
            android:layout_gravity="center_vertical|right"
            app:elevation="4dp"
            card_view:backgroundTint="@color/colorPrimary" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        android:nestedScrollingEnabled="true"
        >

        <com.makeramen.roundedimageview.RoundedImageView

            android:layout_height="80dp"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/rahul_prakash"
            android:layout_gravity="center_vertical|left"
            app:riv_corner_radius_bottom_left="40dp"
            app:riv_corner_radius_bottom_right="40dp"
            app:riv_corner_radius_top_left="40dp"
            app:riv_corner_radius_top_right="40dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:text="Rahul Prakash"
                android:gravity="center_vertical|center"
                android:width="50dp"
                android:textSize="15sp"
                android:textColor="#c30b1f2b"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"/>
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/rahul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="+919443783564"
            android:onClick="call"
            android:src="@drawable/call"
            android:layout_gravity="center_vertical|right"
            app:elevation="4dp"
            card_view:backgroundTint="@color/colorPrimary" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"

        android:layout_height="97dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        android:nestedScrollingEnabled="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:text="Mail"
                android:gravity="center_vertical|center"
                android:width="50dp"
                android:textSize="15sp"
                android:textColor="#c30b1f2b"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                />
        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_dialog_email"
            android:contentDescription="events@kurukshetra.org.in"
            android:onClick="mail"
            android:layout_gravity="center_vertical|right"
            app:elevation="4dp"
            card_view:backgroundTint="@color/colorPrimary" />

    </android.support.v7.widget.CardView>

</LinearLayout>
    </ScrollView>